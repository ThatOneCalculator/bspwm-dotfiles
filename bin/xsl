#!/bin/sh
source $HOME/.cache/wal/colors.sh
export XSECURELOCK_SAVER="$HOME/fehwall"
export XSECURELOCK_DISCARD_FIRST_KEYPRESS=0
export XSECURELOCK_FONT="FiraCode Nerd Font"
export XSECURELOCK_AUTH_BACKGROUND_COLOR="$background"
export XSECURELOCK_PASSWORD_PROMPT="time_hex"
export XSECURELOCK_DIM_FPS=144
export XSECURELOCK_NO_COMPOSITE=1
export XSECURELOCK_IMAGE_PATH="$wallpaper"
export XSECURELOCK_IMAGE_DURATION_SECONDS=30

xsecurelock &
sleep 1 && xset dpms force off
